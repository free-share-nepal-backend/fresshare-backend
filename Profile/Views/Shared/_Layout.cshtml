    <!--education start -->
    <section id="education" class="education">
        <div class="section-heading text-center">
            <h2>education</h2>
        </div>
        <div class="container">
            <div class="education-horizontal-timeline">
                @if (!Model.education.Any())
                {
                    <h1 class="text-center text-info">No Education Added</h1>
                }
                else
                {
                    <div class="row">
                        @for (int i = 0; i < Model.education.Count; i++)
                        {
                            @*if (i>2) {
                              </div>
                              <div class="row">
                            }*@
                        <div class="col-sm-4">
                            <div class="single-horizontal-timeline">
                                <div class="experience-time">
                                    <h2>@Model.education[i].StartDate - @Model.education[i].EndDate</h2>
                                    <h3>@Model.education[i].Level</h3>
                                </div><!--/.experience-time-->
                                <div class="timeline-horizontal-border">
                                    <i class="fa fa-circle" aria-hidden="true"></i>
                                    <span class="single-timeline-horizontal"></span>
                                </div>
                                <div class="timeline">
                                    <div class="timeline-content">
                                        <h4 class="title">
                                            @Model.education[i].CollegeName
                                        </h4>
                                        <h5>@Model.education[i].Address</h5>
                                        <p class="description">
                                            @Model.education[i].CollegeDetail
                                        </p>
                                    </div><!--/.timeline-content-->
                                </div><!--/.timeline-->
                            </div>
                        </div>
                        @*@if (i > 2)
                           {
                               </div>
                            }*@
                        }
                    </div>
                 }
            </div>
        </div>

    </section><!--/.education-->
    <!--education end -->

    <!--skills start -->
    <section id="skills" class="skills">
        <div class="skill-content">
            <div class="section-heading text-center">
                <h2>skills</h2>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="single-skill-content">
                            @if (!Model.skill.Any())
                            {
                            <h1 class="text-center text-info">No Skills Added</h1>
                            }
                            else
                            {
                                for (int i = 0; i < Model.skill.Count; i++)
                                {
                            <div class="barWrapper">
                                <span class="progressText">@Model.skill[i].Skills</span>
                                <div class="single-progress-txt">
                                    <div class="progress ">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@Model.skill[i].Percentage" aria-valuemin="10" aria-valuemax="100" style="">
                                        </div>
                                    </div>
                                    <h3>@Model.skill[i].Percentage%</h3>
                                </div>
                            </div><!-- /.barWrapper -->
                                }

                            }
                        </div>
                    </div>
                </div><!-- /.row -->
            </div>	<!-- /.container -->
        </div><!-- /.skill-content-->

    </section><!--/.skills-->
    <!--skills end -->
    <!--experience start -->
    <section id="experience" class="experience">
        <div class="section-heading text-center">
            <h2>experience</h2>
        </div>
        <div class="container">
            <div class="experience-content">
                <div class="main-timeline">
                    <ul>
                        @if (!Model.experience.Any())
                        {
                        <h1 class="text-center text-info">No Experience Added</h1>
                        }
                        else
                        {
                            for (int i = 0; i < Model.experience.Count; i++)
                            {
                                if (i % 2 == 0)
                                {
                        <li>
                            <div class="single-timeline-box fix">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="experience-time text-right">
                                            <h2>@Model.experience[i].StartDate - @Model.experience[i].EndDate</h2>
                                            <h3>@Model.experience[i].Post</h3>
                                        </div><!--/.experience-time-->
                                    </div><!--/.col-->
                                    <div class="col-md-offset-1 col-md-5">
                                        <div class="timeline">
                                            <div class="timeline-content">
                                                <h4 class="title">
                                                    <span><i class="fa fa-circle" aria-hidden="true"></i></span>
                                                    @Model.experience[i].OfficeName
                                                </h4>
                                                <h5>@Model.experience[i].Address</h5>
                                                <p class="description">
                                                    @Model.experience[i].OfficeDetails
                                                </p>
                                            </div><!--/.timeline-content-->
                                        </div><!--/.timeline-->
                                    </div><!--/.col-->
                                </div>
                            </div><!--/.single-timeline-box-->
                        </li>
                                }
                                else
                                {
                        <li>
                            <div class="single-timeline-box fix">
                                <div class="row">
                                    <div class="col-md-offset-1 col-md-5 experience-time-responsive">
                                        <div class="experience-time">
                                            <h2>
                                                <span><i class="fa fa-circle" aria-hidden="true"></i></span>
                                                @Model.experience[i].StartDate - @Model.experience[i].EndDate
                                            </h2>
                                            <h3>@Model.experience[i].Post</h3>
                                        </div><!--/.experience-time-->
                                    </div><!--/.col-->
                                    <div class="col-md-5">
                                        <div class="timeline">
                                            <div class="timeline-content text-right">
                                                <h4 class="title">
                                                    @Model.experience[i].OfficeName
                                                </h4>
                                                <h5>@Model.experience[i].Address</h5>
                                                <p class="description">
                                                    @Model.experience[i].OfficeDetails
                                                </p>
                                            </div><!--/.timeline-content-->
                                        </div><!--/.timeline-->
                                    </div><!--/.col-->
                                    <div class="col-md-offset-1 col-md-5 experience-time-main">
                                        <div class="experience-time">
                                            <h2>
                                                <span><i class="fa fa-circle" aria-hidden="true"></i></span>
                                                @Model.experience[i].StartDate - @Model.experience[i].EndDate

                                            </h2>
                                            <h3>>@Model.experience[i].Post</h3>
                                        </div><!--/.experience-time-->
                                    </div><!--/.col-->
                                </div>
                            </div><!--/.single-timeline-box-->
                        </li>
                                }
                            }
                        }
                    </ul>
                </div><!--.main-timeline-->
            </div><!--.experience-content-->
        </div>

    </section><!--/.experience-->
    <!--experience end -->
